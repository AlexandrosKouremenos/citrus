<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %10.-10logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.kafka.streams.processor.internals.StreamThread" level="ERROR" />

<!--    <include resource="org/springframework/boot/logging/logback/base.xml" />-->
<!--    <logger name="org.apache.kafka.streams.processor.internals.StreamThread" level="WARN"/>-->

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>